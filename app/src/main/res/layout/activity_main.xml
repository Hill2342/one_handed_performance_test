<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--相册引入按键-->
    <Button
        android:id="@+id/fromAlbumBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Album"/>

    <!--放大按键-->
    <Button
        android:id="@+id/enlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+"/>

    <!--缩小按键-->
    <Button
        android:id="@+id/narrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"/>

    <!--图片位-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="unselected"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/hiddenImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/showTextx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is x" />
    <TextView
        android:id="@+id/showTexty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is y" />
    <TextView
        android:id="@+id/showTextz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is z" />

    <com.example.one_handed_performance_test.ButtonArray
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    
</LinearLayout>
